# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /rules                      controllers.HomeController.rules
GET     /undo                       controllers.HomeController.undo()

GET     /setBoardSize               controllers.HomeController.setBoardSize(size: String)
GET     /move                       controllers.HomeController.move(from: String, to: String)
GET     /api/hints                  controllers.HomeController.hints(from: Int)
GET     /api/bearIn                 controllers.HomeController.bearIn()

# Session and CSRF endpoints
GET     /csrf-token                 controllers.HomeController.getCsrfToken
GET     /get-username               controllers.HomeController.getUsername
POST    /update-username            controllers.HomeController.updateUsername

# Alle anderen Assets
GET     /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)

# Create a new lobby (ID generated)
POST    /lobby                  controllers.LobbyController.createLobby

# Join a lobby via WebSocket
GET     /lobby/:lobbyId/ws     controllers.LobbyController.joinLobby(lobbyId: String, user: String)

GET     /queue-ws              controllers.LobbyController.socket

GET    /matchmaking/count     controllers.LobbyController.countPublicWaiting()